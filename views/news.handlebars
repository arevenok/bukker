<div class="main">

	<div class="pageHeader">
        <i class="ion-ios-paper-outline"></i>
		<h1>{{meta_title}}</h1>
	</div>

	<div class="news-list">
        {{#each news}}
            {{#if @first}}
                <div class="news">
                    <div class="cover">
                        <a href="/news/{{url}}"><img src="/news/{{image}}" alt="{{title}}"></a>
                    </div>
                    <a href="/news/{{url}}" class="title">{{title}}</a>
                </div>
            {{else}}
                <div class="news">
                    <div class="cover">
                        <a href="/news/{{url}}"><img src="/news/{{image}}" alt="{{title}}"></a>
                    </div>
                    <a href="/news/{{url}}" class="title">{{title}}</a>
                </div>
            {{/if}}
        {{/each}}
	</div>

</div>