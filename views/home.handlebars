<div class="main">

	<div class="pageHeader">
		<h1>Главная</h1>
		<div class="sorting">
			<a id="menu-toggle" href="" class="active">новые</a> /
			<a href="">популярные</a>
		</div>
	</div>
	<div class="book-list">
		{{#each book}}
		<div class="book">
			<div class="cover">
				<div class="overlay"></div>
				<img src="covers/{{cover}}" title="{{title}}">
			</div>
			<a href="/book/{{url}}" class="title">{{title}}</a>
			<a href="/author/{{author}}" class="author">{{author}}</a>
			<div>{{year}}</div>
		</div>
		{{/each}}
	</div>

</div>