<div class="main">

	<div class="pageHeader">
		<h1>Добавить книгу</h1>
	</div>

	<div class="addBookForm">
		<form action="addbook" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<input type="text" class="form-control" name="title" placeholder="Название">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="description" rows="4" placeholder="Содержание"></textarea>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="author" placeholder="Автор">
			</div>
			<div class="form-group">
				<input type="number" class="form-control" name="year" maxlength="4" placeholder="2016">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="ganre" placeholder="Жанр">
			</div>
			<div class="form-group">
				<input type="file" name="cover">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>

</div>