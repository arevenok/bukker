<div class="main">

	<div class="pageHeader">
        <i class="ion-ios-color-filter-outline"></i>
		<h1>{{meta_title}}</h1>
        <div class="search">
            <form action="/search" method="post">
                <div class="right-inner-icon">
                    <i class="ion-ios-search"></i>
                    <input type="search" name="searching"  placeholder="Найти книгу..." />
                </div>
            </form>
        </div>
	</div>
	<div class="ganre-list">
		{{#each ganre}}
			<div class="ganre">
				<ul>
                    {{this.title}}

                    {{#each this.subGanres }}
                    <li>
                        <a href="{{main-root}}ganre/{{@key}}">{{this}}</a>
                    </li>
                    {{/each}}
                </ul>
			</div>
		{{/each}}
	</div>

</div>