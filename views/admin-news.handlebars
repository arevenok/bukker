<div class="main">

    <div class="pageHeaderInner">
        <h1>{{meta_title}}</h1>
    </div>
    <div class="admin-page">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Заголовок</th>
                <th>добавлена</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each news}}
                <tr>
                    <td><a target="_blank" href="/news/{{this.url}}" class="title">{{this.title}}</a></td>
                    <td style="font-size:14px; text-wrap:avoid; color:#666">{{formatDateAndTime this.date}}</td>
                    <td>
                        <a href="newsedit/{{_id}}"><i style="font-size:20px" class="ion-compose"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <div class="admin-pagination">
            <ul class="pagination pagination-centered">
                {{#paginate pagination type="first"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}">Начало</a></li>
                {{/paginate}}
                {{#paginate pagination type="previous"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}"><i class="ion-ios-arrow-thin-left"></i></a></li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="20"}}
                    <li {{#if active}}class="active"{{/if}}><a href="?page={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}" class="ion-ios-arrow-thin-right"></a></li>
                {{/paginate}}
                {{#paginate pagination type="last"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}">Конец</a></li>
                {{/paginate}}
            </ul>
        </div>

    </div>

</div>